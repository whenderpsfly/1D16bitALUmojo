module sevenSeg (
    input char[8],
    output seg[7]
  ) {

  always {
    case(char){
      0:
        seg = 7b0111111;
      1:
        seg = 7b0000110;
      2:
        seg = 7b1011011;
      3:
        seg = 7b1001111;
      4:
        seg = 7b1100110;
      5:
        seg = 7b1101101;
      6:
        seg = 7b1111101;
      7:
        seg = 7b0000111;
      8:
        seg = 7b1111111;
      9:
        seg = 7b1101111;
      16b1110111://a
        seg = 7b1110111;
      16b1111100://b
        seg = 7b1111100;
      16b0111001://c
        seg = 7b0111001;
      16b1011110://d
        seg = 7b1011110;
      16b1111001://e
        seg = 7b1111001;
      16b1110100://h
        seg = 7b1110100;
      16b0111000://l
        seg = 7b0111000;
      16b0010101://m
        seg = 7b0010101;
      16b0110111://n
        seg = 7b0110111;
      16b1011100://o
        seg = 7b1011100;
      16b1110011://p
        seg = 7b1110011;
      16b1100111://q
        seg = 7b1100111;
      16b1010000://r
        seg = 7b1010000;
      16b1101101://s
        seg = 7b1101101;
      16b1111000://t
        seg = 7b1111000;
      16b0111110://u
        seg = 7b0111110;
      16b1110110://x
        seg = 7b1110110;
      default:
        seg = 7b0000000;
    }
  }
}
